{
  "compilerOptions": {
    "newLine": "lf",
    "target": "ESNext",
    "module": "NodeNext",
    "allowJs": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "useUnknownInCatchVariables": false,
    "sourceMap": true,
    "outDir": "lib",
    "esModuleInterop": true,
    "moduleResolution": "Node16",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "strict": true,
    "lib": ["ES2021", "ES2015"]
  }
}
